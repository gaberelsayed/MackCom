<%- include ('layout/header.ejs') %>
<link rel="stylesheet" href="/css/add-message.css">
</head> 
<body>
  <%- include ('layout/nav.ejs') %>
  <%- include ('layout/alert.ejs') %> 
    <div class="container">
        <div class='msgBox'>
          <div class="msgRectangle">
            <h2>Add Message</h2>
          </div>
          <form id="addForm" autocomplete="off" class="form">
            <div class="form-group">
              <div class="input-group">
                <input required id="title" name="title" placeholder="Message Title" class="form-control"  type="text">
              </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                  <input required id="msg" name="msg" placeholder="Message" class="form-control"  type="text">
                </div>
              </div>
            <div class="form-group">
              <input class="btn btn-lg btn-primary btn-block" type="button" value="Add Message" onclick="postMessage()">
            </div>
            <input type="hidden" id='_csrf' name="_csrf" value="<%= csrfToken %>">
          </form>
        </div>
    </div>
    <%- include ('layout/toast.ejs') %>    
    <script src="/js/add.js"></script>
<%- include ('layout/footer.ejs') %>

