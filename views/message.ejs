<%- include ('layout/header.ejs') %>
<style>
  body {
    background-color: #a8a8a8;
    font-family: "Roboto", sans-serif;
    padding: 75px;
    text-align: center;
}
.resetBox{
  width: 40%;
  position: absolute;
  left: 30%;
}
</style>
</head> 
<body>
  <%- include ('layout/alert.ejs') %> 
    <div class="container">
      <div class="text-center resetBox">
        <h2 class="text-center">Add Message</h2>
        <div class="panel-body">
          <form action="/add-message"  role="form" autocomplete="off" class="form" method="post">
            <div class="form-group">
              <div class="input-group">
                <input id="title" name="title" placeholder="Message Title" class="form-control"  type="text">
              </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                  <input id="msg" name="msg" placeholder="Message" class="form-control"  type="text">
                </div>
              </div>
            <div class="form-group">
              <input class="btn btn-lg btn-primary btn-block" value="Add Message" type="submit">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          </form>
        </div>
      </div>
    </div>
<%- include ('layout/footer.ejs') %>
