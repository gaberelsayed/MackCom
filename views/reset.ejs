<%- include ('layout/header.ejs') %>
<style>
  body {
    background-color: #a8a8a8;
    font-family: "Roboto", sans-serif;
    padding: 75px;
    text-align: center;
}
.resetBox{
  width: 40%;
  position: absolute;
  left: 30%;
}
</style>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
</head> 
<body>
  <%- include ('layout/alert.ejs') %> 
    <div class="container">
      <div class="text-center resetBox">
        <h3><i class="fa fa-lock fa-4x"></i></h3>
        <h2 class="text-center">Forgot Password?</h2>
        <p>You can reset your password here.</p>
        <div class="panel-body">
          <form action="/auth/resetPassword"  role="form" autocomplete="off" class="form" method="post">
            <div class="form-group">
              <div class="input-group">
                <input id="email" name="email" placeholder="Email Address" class="form-control"  type="email">
              </div>
            </div>
            <div class="form-group">
              <input class="btn btn-lg btn-primary btn-block" value="Reset Password" type="submit">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          </form>
        </div>
      </div>
    </div>
<%- include ('layout/footer.ejs') %>
